<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prisyazhnuy.radioplayer.views.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/btnAdd"
        android:onClick="addStation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stations"
        android:onClick="allStations"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btnAdd"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnAdd"
        android:layout_marginTop="105dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd"
        app:layout_constraintHorizontal_bias="0.47" />

</android.support.constraint.ConstraintLayout>
