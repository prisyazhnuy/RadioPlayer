<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/station_item_background"
    >

    <CheckBox
        android:id="@+id/cbIsFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:button="@null"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/favorite_checkbox_icon"
        android:drawableStart="@drawable/favorite_checkbox_icon"
        android:padding="16dp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/cbIsFavourite"
        android:layout_toRightOf="@+id/cbIsFavourite"
        android:text="@string/app_name"
        android:textColor="#000"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tvUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_toEndOf="@+id/tvName"
        android:layout_toLeftOf="@+id/tvTime"
        android:layout_toRightOf="@+id/tvName"
        android:layout_toStartOf="@+id/tvTime"
        android:textColor="#000"
        tools:text="Name" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:textColor="#000"
        tools:text="00:00:00" />


</RelativeLayout>